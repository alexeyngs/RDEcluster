FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.0005;

countX 4000;
countY 400;
vertices
(
    (0       0       0)
    ($countX 0       0)
    ($countX $countY 0)
    (0       $countY 0)
    (0       0       1)
    ($countX 0       1)
    ($countX $countY 1)
    (0       $countY 1)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($countX $countY 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (1 2 6 5)
        );
    }
    walls
    {
        type patch;
        faces
        (
            (0 1 5 4)
            (5 6 7 4)
            (3 7 6 2)
            (0 3 2 1)
        );
    }
);

mergePatchPairs
(
);
